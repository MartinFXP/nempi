citHeader("To cite nempi in publications use:")

citEntry(entry = "Article",
  title        = "Inferring perturbation profiles of cancer samples.",
  author       = "Martin Pirkl, Niko Beerenwinkel",
  journal      = "Bioinformatics",
  year         = "2021",
  number       = "btab113",
  url          = "https://doi.org/10.1093/bioinformatics/btab113",

  textVersion  =
  paste("Martin Pirkl, Niko Beerenwinkel (2021).",
        "Inferring perturbation profiles of cancer samples.",
        "Bioinformatics bioinformatics/btab113; doi: bioinformatics/btab113")
)
